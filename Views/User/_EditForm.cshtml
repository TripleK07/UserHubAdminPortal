@model UserHubAdminPortal.Models.Users

@{
    ViewData["Title"] = "GetById";
}

<!-- No Labels Form -->
<form class="row g-3" id="modal-form">
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="RecordStatus" />
    <div class="col-md-12">
        <input type="text" class="form-control" placeholder="Username" asp-for="UserName" required>
    </div>
    <div class="col-md-12">
        <input type="text" class="form-control" placeholder="Login ID" asp-for="LoginID" required>
    </div>
    <div class="col-md-6">
        <input type="password" class="form-control" placeholder="Password" asp-for="Password" required>
    </div>
    <div class="col-md-6">
        <input type="email" class="form-control" placeholder="Email" asp-for="Email" required>
    </div>
    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="chkIsActive" asp-for="IsActive">
            <label class="form-check-label" for="chkIsActive">
                Active?
            </label>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form><!-- End No Labels Form -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

